{% extends 'base.html.twig' %}

{% block body %}
    <header class="intro-header" style="background-image: url('/img/post-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.getTitle }}</h1>
                        <h2 class="subheading">{{ post.getSubTitle }}</h2>
                        <span class="meta">Posted by <a href="#">{{ post.getAuthor }}</a> on August 24, 2014</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {{ post.getContent }}
                </div>
            </div>
        </div>
    </article>

    <hr>
{% endblock %}

